<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="407dp"
        android:layout_height="490dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56">

        <LinearLayout
            android:id="@+id/linearLayout1eso"
            android:layout_width="283dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.086">

            <Button
                android:id="@+id/btn1eso"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1ยบ ESO" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout2eso"
            android:layout_width="283dp"
            android:layout_height="59dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3eso"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout1eso">

            <Button
                android:id="@+id/btn2eso"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2ยบ ESO" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3eso"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4eso"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout1eso"
            app:layout_constraintVertical_bias="0.698">

            <Button
                android:id="@+id/btn3eso"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="3ยบ ESO" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4eso"
            android:layout_width="283dp"
            android:layout_height="54dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout1eso"
            app:layout_constraintVertical_bias="0.802">

            <Button
                android:id="@+id/btn4eso"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4ยบ ESO" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>